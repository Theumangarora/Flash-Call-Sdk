<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_gravity="center"
        >

        <!-- Title Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:text="Enter Your Phone Number"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Subtitle Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Please confirm your country code and\nenter your phone number"
            android:textColor="#666666"
            android:textSize="16sp" />

        <!-- Country Picker Section -->
        <LinearLayout
            android:id="@+id/countryPickerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="@drawable/bg_country_picker"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:id="@+id/countryFlagText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="ðŸ‡ºðŸ‡¸"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/countryNameText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:text="United States"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/countryCodeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="8dp"
                android:text="+1"
                android:textColor="#666666"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_arrow_down" />
        </LinearLayout>

        <!-- Phone Number Input Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_phone_input"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/selectedCountryCode"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#F5F5F5"
                android:gravity="center"
                android:minWidth="64dp"
                android:padding="16dp"
                android:text="+1"
                android:textColor="#000000"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/phoneNumberInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="Phone number"
                android:inputType="phone"
                android:padding="16dp"
                android:textColor="#000000"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Next Button -->
        <Button
            android:id="@+id/nextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_next_button"
            android:enabled="false"
            android:padding="16dp"
            android:text="NEXT"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Progress Bar Overlay -->
    <FrameLayout
        android:id="@+id/progressBarContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="#80000000">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

    </FrameLayout>
</FrameLayout>